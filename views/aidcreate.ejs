<!DOCTYPE html>
<html>
  <%- include("../partials/header") %>
  <body>
    <div class="homepageWrap">
      <div class="displayPanel">
        <div class="formWrap">
          <form class="weaponForm" method="POST" action=" ">
            <%- include("../partials/form/name") %> <%-
            include("../partials/form/value") %> <%-
            include("../partials/form/weight") %>
            <label for="tag">Tag:</label>
            <input type="text" id="tag" name="tag" maxlength="4" required
            placeholder="Ex: MED (Max length = 4)" <%- typeof dataItem !=
            "undefined" && "value=" %> "<%= typeof dataItem != "undefined" &&
            dataItem.tag %>" />

            <label for="effects">Effects:</label>
            <input type="text" id="effects" name="effects" maxlength="25"
            required placeholder="Ex: Charisma + 5" <%- typeof dataItem !=
            "undefined" && "value=" %> "<%= typeof dataItem != "undefined" &&
            dataItem.effects %>" />

            <input type="submit" value="Submit" class="submitButton" />
          </form>
        </div>
        <%- include("../partials/homeLink") %>
      </div>
    </div>
  </body>
  <%- include("../scripts/eventScript") %>
</html>
